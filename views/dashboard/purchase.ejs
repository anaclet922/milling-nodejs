<%- include('../includes/dashboard-top') %>

    <div class="page-content-wrapper">

        <div class="page-content">

            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Dashboard</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0 align-items-center">
                            <li class="breadcrumb-item"><a href="/dashboard"><ion-icon name="home-outline" role="img"
                                        class="md hydrated" aria-label="home outline"></ion-icon></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <%= locals.title %>
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="ms-auto">
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal"
                            data-bs-target="#new-purchase-modal">New Purchase</button>
                    </div>
                </div>
            </div>
            <!--end breadcrumb-->

            <br>
            <br>
            <br>

            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            <table id="purchases" class="table table-striped table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Item name</th>
                                        <th>Unit Price</th>
                                        <th>Quantity</th>
                                        <th>Transport Cost</th>
                                        <th>Total Cost</th>
                                        <th>Mode</th>
                                        <th>Date & Time</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <% purchases.forEach((purchase, index)=> { %>
                                        <tr>
                                            <td>
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <%= purchase.item_name %>
                                            </td>
                                            <td>
                                                <%= purchase.unit_price.toLocaleString() %>
                                            </td>
                                            <td>
                                                <%= purchase.quantity.toLocaleString() %>
                                            </td>
                                            <td>
                                                <%= purchase.transport_cost.toLocaleString() %>
                                            </td>
                                            <td>
                                                <%= purchase.total_price.toLocaleString() %>
                                            </td>
                                            <td>
                                                <%= purchase.name == null ? 'Debt' : purchase.name %>
                                            </td>
                                            <td>
                                                <%= purchase.creation_date.toLocaleString() %>
                                            </td>

                                        </tr>
                                        <% }); %>

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Item name</th>
                                        <th>Unit Price</th>
                                        <th>Quantity</th>
                                        <th>Transport Cost</th>
                                        <th>Total Cost</th>
                                        <th>Mode</th>
                                        <th>Date & Time</th>
                                    </tr>
                                </tfoot>
                            </table>


                        </div>
                    </div>
                </div>
            </div>


        </div>


    </div>




    <!-- Modal -->
    <div class="modal fade" id="new-purchase-modal" tabindex="-1" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">

                <form action="/dashboard/purchase/new" method="post">

                    <div class="modal-header">
                        <h5 class="modal-title">New purchase</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body row">

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Item Type</label>
                            <select name="type" class="form-control form-control-lg mb-3">
                                <option value="" selected>Select item type</option>
                                <option value="maize">Maize</option>
                                <option value="inventory">Inventory</option>
                            </select>
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Item Name</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="Item name"
                                name="item_name" required>
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Unit price</label>
                            <input class="form-control form-control-lg mb-3" type="number" placeholder="Unit price"
                                name="unit_price" required value="0">
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="" id="quantity-lable-id">Quantity</label>
                            <input class="form-control form-control-lg mb-3" type="number" placeholder="Quantity"
                                name="quantity" required value="0">
                        </div>


                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Transport cost</label>
                            <input class="form-control form-control-lg mb-3" type="number" placeholder="Transport cost"
                                name="transport_cost" required value="0">
                        </div>


                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Total cost</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="Total cost"
                                name="total_price" required readonly="readonly">
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Seller name</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="Seller name"
                                name="seller" required>
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Place of purchase</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="Place of purchase"
                                name="place_of_purchase" required>
                        </div>



                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Payment Mode</label>
                            <select name="payment_method_id" class="form-control form-control-lg mb-3" required>
                                <option value="">Select Payment mode</option>
                                <% modes.forEach((mode, index)=> { %>
                                    <option value="<%= mode.id %>">
                                        <%= mode.name %>
                                    </option>
                                    <% }) %>
                                        <option value="debt">Debt</option>
                            </select>
                        </div>


                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Description</label>
                            <textarea name="description" class="form-control"></textarea>
                        </div>


                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Note</label>
                            <textarea name="note" class="form-control"></textarea>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <script>

        $(document).ready(function () {

            $('input[name="unit_price"]').keyup(function () {
                let t = parseFloat($('input[name="unit_price"]').val() * $('input[name="quantity"]').val()) + parseFloat($('input[name="transport_cost"]').val());
                $('input[name="total_price"]').val(parseFloat(t));
            });

            $('input[name="quantity"]').keyup(function () {
                let t = parseFloat($('input[name="unit_price"]').val() * $('input[name="quantity"]').val()) + parseFloat($('input[name="transport_cost"]').val());
                $('input[name="total_price"]').val(parseFloat(t));
            });

            $('input[name="transport_cost"]').keyup(function () {
                let t = parseFloat($('input[name="unit_price"]').val() * $('input[name="quantity"]').val()) + parseFloat($('input[name="transport_cost"]').val());
                $('input[name="total_price"]').val(parseFloat(t));
            });


            $('select[name="type"]').change(function () {
                if ($('select[name="type"]').val() == 'maize') {
                    $('#quantity-lable-id').html('Quantity in kg');
                } else {
                    $('#quantity-lable-id').html('Quantity');
                }
            });

        });

    </script>

    <%- include('../includes/dashboard-foot') %>