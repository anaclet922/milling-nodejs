    <!-- Modal -->
    <div class="modal fade" id="new-daily-workforce-modal" tabindex="-1" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <form action="/dashboard/workforce/new-daily-workforce" method="post"
                    enctype="multipart/form-data">
                    <div class="modal-header">
                        <h5 class="modal-title">New Daily workforce</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body row">
                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">First name</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="First name"
                                name="first_name">
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Last name</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="Last name"
                                name="last_name">
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Gender</label>
                            <select name="gender" id="" class="form-control form-control-lg mb-3">
                                <option value="">Select gender</option>
                                <option value="M">Male</option>
                                <option value="F">Female</option>
                            </select>
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Date of birth</label>
                            <input class="form-control form-control-lg mb-3" type="date" placeholder="Year of birth"
                                name="date_of_birth">
                        </div>
                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">NID</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="National ID"
                                name="nid">
                        </div>
                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Phone number</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="Phone number"
                                name="phone">
                        </div>
                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Department</label>
                            <select name="department_id" id="" class="form-control form-control-lg mb-3">
                                <option value="">Select Department</option>
                                
                            </select>
                        </div>
                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Position</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="Position"
                                name="position">
                        </div>
                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Start date/hiring date</label>
                            <input class="form-control form-control-lg mb-3" type="date" placeholder="hired_date"
                                name="hired_date">
                        </div>
                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">End date</label>
                            <input class="form-control form-control-lg mb-3" type="date" placeholder="hired_date"
                                name="end_date">
                        </div>
                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Contract</label>
                            <input class="form-control form-control-lg mb-3" type="file" name="contract"
                                accept="application/pdf">
                        </div>
                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Passport Photo</label>
                            <input class="form-control form-control-lg mb-3" type="file" name="picture"
                                accept="image/jpeg, image/png">
                        </div>
                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Username</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="Username"
                                name="username">
                        </div>
                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Password</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="Password"
                                name="password">
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Note</label>
                            <textarea name="note" class="form-control"></textarea>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


