<%- include('../includes/dashboard-top') %>

    <div class="page-content-wrapper">

        <div class="page-content">

            <div class="page-breadcrumb d-sm-flex align-items-center mb-3">
                <!-- <div class="breadcrumb-title pe-3">Dashboard</div> -->
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0 align-items-center">
                            <li class="breadcrumb-item"><a href="/dashboard"><ion-icon name="home-outline" role="img"
                                        class="md hydrated" aria-label="home outline"></ion-icon></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <%= locals.title %>
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="ms-auto">
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal"
                            data-bs-target="#new-purchase-modal">New Purchase</button>
                    </div>
                </div>
            </div>
            <!--end breadcrumb-->

            <br>
            <br>
            <br>

            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            <table id="purchases" class="table table-striped table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Item name</th>
                                        <th>Unit Price (RWF)</th>
                                        <th>Quantity (kg)</th>
                                        <th>Product Cost (RWF)</th>
                                        <th>Total Cost (RWF)</th>
                                        <th>Mode</th>
                                        <th>Seller</th>
                                        <th>Date & Time</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <% purchases.forEach((purchase, index)=> { %>
                                        <tr>
                                            <td>
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <%= purchase.item_name %>
                                            </td>
                                            <td>
                                                <%= purchase.unit_price.toLocaleString() %>
                                            </td>
                                            <td>
                                                <%= purchase.quantity.toLocaleString() %>
                                            </td>
                                            <td>
                                                <%= (purchase.total_price - purchase.transport_cost - purchase.other_cost).toLocaleString() %>
                                            </td>
                                            <td>
                                                <%= purchase.total_price.toLocaleString() %>
                                            </td>
                                            <td>
                                                <%= purchase.name==null ? 'Debt' : purchase.name %>
                                            </td>
                                            <td>
                                                <%= purchase.seller_name %>
                                            </td>
                                            <td>
                                                <%= getFormatedDate(purchase.creation_date) %>
                                            </td>
                                            <td>

                                                <div class="btn-group">
                                                    <a href="javascript:;" class="btn btn-outline-primary"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#edit-purchase-<%= purchase.puchase_id %>">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </a>
                                                    <button type="button"
                                                        class="btn btn-outline-primary split-bg-primary dropdown-toggle dropdown-toggle-split"
                                                        data-bs-toggle="dropdown"> <span class="visually-hidden">Toggle
                                                            Dropdown</span>
                                                    </button>
                                                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end">
                                                        <a class="dropdown-item" href="javascript:;"
                                                            onclick="areYouSureToDelete(<%= purchase.puchase_id %>)">Delete</a>
                                                    </div>
                                                </div>


                                                <!-- Modal -->
                                                <div class="modal fade" id="edit-purchase-<%= purchase.puchase_id %>"
                                                    tabindex="-1" aria-hidden="true" style="display: none;">
                                                    <div class="modal-dialog modal-dialog-centered modal-lg">
                                                        <div class="modal-content">

                                                            <form action="/dashboard/purchase/edit" method="post">

                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Edit purchase</h5>
                                                                    <button type="button" class="btn-close"
                                                                        data-bs-dismiss="modal"
                                                                        aria-label="Close"></button>
                                                                </div>

                                                                <div class="modal-body row">

                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">Item Type</label>
                                                                        <select name="type"
                                                                            class="form-control form-control-lg mb-3"
                                                                            required>
                                                                            <option value="" selected>Select item type
                                                                            </option>
                                                                            <option value="maize"
                                                                                <%=purchase.type=='maize' ? 'selected'
                                                                                :'' %>>Maize</option>
                                                                            <option value="inventory"
                                                                                <%=purchase.type=='inventory'
                                                                                ? 'selected' :'' %>>Inventory</option>

                                                                            <option value="other">Other</option>
                                                                        </select>
                                                                    </div>

                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">Item Name</label>
                                                                        <input class="form-control form-control-lg mb-3"
                                                                            type="text" placeholder="Item name"
                                                                            name="item_name" required
                                                                            value="<%= purchase.item_name %>">
                                                                    </div>

                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">Unit price</label>
                                                                        <input class="form-control form-control-lg mb-3"
                                                                            type="number" placeholder="Unit price"
                                                                            name="unit_price" required
                                                                            id="unit_price_<%= purchase.puchase_id %>"
                                                                            value="<%= purchase.unit_price %>">
                                                                    </div>

                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for=""
                                                                            id="quantity-lable-id">Quantity</label>
                                                                        <input class="form-control form-control-lg mb-3"
                                                                            type="number" placeholder="Quantity"
                                                                            name="quantity" required
                                                                            id="quantity_<%= purchase.puchase_id %>"
                                                                            value="<%= purchase.quantity %>">
                                                                    </div>


                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">Transport cost</label>
                                                                        <input class="form-control form-control-lg mb-3"
                                                                            type="number" placeholder="Transport cost"
                                                                            name="transport_cost" required
                                                                            id="transport_cost_<%= purchase.puchase_id %>"
                                                                            value="<%= purchase.transport_cost %>">
                                                                    </div>

                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">Other Cost (E.g.:
                                                                            Gupakurura, Commissions...)</label>
                                                                        <input class="form-control form-control-lg mb-3"
                                                                            type="number" placeholder="Other costs"
                                                                            name="other_cost" required
                                                                            id="other_cost<%= purchase.other_cost %>"
                                                                            value="<%= purchase.other_cost %>">
                                                                    </div>

                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">Total cost</label>
                                                                        <input class="form-control form-control-lg mb-3"
                                                                            type="text" placeholder="Total cost"
                                                                            name="total_price" required
                                                                            readonly="readonly"
                                                                            id="total_price_<%= purchase.puchase_id %>"
                                                                            value="<%= purchase.total_price %>">
                                                                    </div>



                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">Seller</label>
                                                                        <select name="seller"
                                                                            class="form-control form-control-lg mb-3"
                                                                            required>
                                                                            <option value="">Select Seller</option>
                                                                            <% sellers.forEach((seller, index)=> { %>
                                                                                <option value="<%= seller.id %>"
                                                                                    <%=purchase.seller==seller.id
                                                                                    ? 'selected' : '' %>>
                                                                                    <%= seller.first_name + ' ' +
                                                                                        seller.last_name %>
                                                                                </option>
                                                                                <% }) %>
                                                                        </select>
                                                                    </div>


                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">Place of purchase</label>
                                                                        <input class="form-control form-control-lg mb-3"
                                                                            type="text" placeholder="Place of purchase"
                                                                            name="place_of_purchase" required
                                                                            value="<%= purchase.place_of_purchase %>">
                                                                    </div>



                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">Payment Mode</label>
                                                                        <select name="payment_method_id"
                                                                            class="form-control form-control-lg mb-3"
                                                                            required>
                                                                            <option value="">Select Payment mode
                                                                            </option>
                                                                            <% modes.forEach((mode, index)=> { %>
                                                                                <option value="<%= mode.id %>"
                                                                                    <%=purchase.payment_method_id==mode.id
                                                                                    ? 'selected' :'' %>>
                                                                                    <%= mode.name %>
                                                                                </option>
                                                                                <% }) %>
                                                                                    <option value="debt"
                                                                                        <%=purchase.payment_method_id==0
                                                                                        ? 'selected' :'' %>>Debt
                                                                                    </option>
                                                                        </select>
                                                                    </div>


                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">Description</label>
                                                                        <textarea name="description"
                                                                            class="form-control"></textarea>
                                                                    </div>


                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">Note</label>
                                                                        <textarea name="note"
                                                                            class="form-control"></textarea>
                                                                    </div>

                                                                </div>
                                                                <div class="modal-footer">
                                                                    <input type="hidden" name="purchase_id"
                                                                        value=" <%= purchase.puchase_id %>">
                                                                    <button type="button" class="btn btn-secondary"
                                                                        data-bs-dismiss="modal">Close</button>
                                                                    <button type="submit" class="btn btn-primary">Save
                                                                        changes</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>


                                                <script>
                                                    $(document).ready(function () {

                                                        $('#unit_price_<%= purchase.puchase_id %>').keyup(function () {
                                                            let t = parseFloat($('#unit_price_<%= purchase.puchase_id %>').val() * $('#quantity_<%= purchase.puchase_id %>').val()) + parseFloat($('#transport_cost_<%= purchase.puchase_id %>').val()) + parseFloat($('#other_cost<%= purchase.puchase_id %>').val());
                                                            $('#total_price_<%= purchase.puchase_id %>').val(parseFloat(t));
                                                        });

                                                        $('#quantity_<%= purchase.puchase_id %>').keyup(function () {
                                                            let t = parseFloat($('#unit_price_<%= purchase.puchase_id %>').val() * $('#quantity_<%= purchase.puchase_id %>').val()) + parseFloat($('#transport_cost_<%= purchase.puchase_id %>').val()) + parseFloat($('#other_cost<%= purchase.puchase_id %>').val());
                                                            $('#total_price_<%= purchase.puchase_id %>').val(parseFloat(t));
                                                        });

                                                        $('#transport_cost_<%= purchase.puchase_id %>').keyup(function () {
                                                            let t = parseFloat($('#unit_price_<%= purchase.puchase_id %>').val() * $('#quantity_<%= purchase.puchase_id %>').val()) + parseFloat($('#transport_cost_<%= purchase.puchase_id %>').val()) + parseFloat($('#other_cost<%= purchase.puchase_id %>').val());
                                                            $('#total_price_<%= purchase.puchase_id %>').val(parseFloat(t));
                                                        });


                                                        $('#other_cost<%= purchase.puchase_id %>').keyup(function () {
                                                            let t = parseFloat($('#unit_price_<%= purchase.puchase_id %>').val() * $('#quantity_<%= purchase.puchase_id %>').val()) + parseFloat($('#transport_cost_<%= purchase.puchase_id %>').val()) + parseFloat($('#other_cost<%= purchase.puchase_id %>').val());
                                                            $('#total_price_<%= purchase.puchase_id %>').val(parseFloat(t));
                                                        });

                                                    });
                                                </script>



                                            </td>
                                        </tr>
                                        <% }); %>

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Item name</th>
                                        <th>Unit Price (RWF)</th>
                                        <th>Quantity (kg)</th>
                                        <th>Product Cost (RWF)</th>
                                        <th>Total Cost (RWF)</th>
                                        <th>Mode</th>
                                        <th>Seller</th>
                                        <th>Date & Time</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>


                        </div>
                    </div>
                </div>
            </div>


        </div>


    </div>




    <!-- Modal -->
    <div class="modal fade" id="new-purchase-modal" tabindex="-1" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">

                <form action="/dashboard/purchase/new" method="post">

                    <div class="modal-header">
                        <h5 class="modal-title">New purchase</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body row">

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Item Type</label>
                            <select name="type" class="form-control form-control-lg mb-3" id="type" required>
                                <option value="" selected>Select item type</option>
                                <option value="maize">Maize</option>
                                <option value="inventory">Inventory</option>
                                <option value="other">Other</option>
                            </select>
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Item Name</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="Item name"
                                name="item_name" required>
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Unit price</label>
                            <input class="form-control form-control-lg mb-3" type="number" placeholder="Unit price"
                                name="unit_price" required value="0" id="unit_price">
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="" id="quantity-lable-id">Quantity</label>
                            <input class="form-control form-control-lg mb-3" type="number" placeholder="Quantity"
                                name="quantity" required value="0" id="quantity">
                        </div>


                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Transport cost</label>
                            <input class="form-control form-control-lg mb-3" type="number" placeholder="Transport cost"
                                name="transport_cost" required value="0" id="transport_cost">
                        </div>


                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Other Cost (E.g.: Gupakurura, Commissions...)</label>
                            <input class="form-control form-control-lg mb-3" type="number" placeholder="Other costs"
                                name="other_cost" required value="0" id="other_cost">
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Total cost</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="Total cost"
                                name="total_price" required readonly="readonly" id="total_price">
                        </div>


                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Seller</label>
                            <select name="seller" class="form-control form-control-lg mb-3" required>
                                <option value="">Select Seller</option>
                                <% sellers.forEach((seller, index)=> { %>
                                    <option value="<%= seller.id %>">
                                        <%= seller.first_name + ' ' + seller.last_name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Place of purchase</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="Place of purchase"
                                name="place_of_purchase" required>
                        </div>



                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Payment Mode</label>
                            <select name="payment_method_id" class="form-control form-control-lg mb-3" required>
                                <option value="">Select Payment mode</option>
                                <% modes.forEach((mode, index)=> { %>
                                    <option value="<%= mode.id %>">
                                        <%= mode.name %>
                                    </option>
                                    <% }) %>
                                        <option value="debt">Debt</option>
                            </select>
                        </div>


                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Description</label>
                            <textarea name="description" class="form-control"></textarea>
                        </div>


                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Note</label>
                            <textarea name="note" class="form-control"></textarea>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <script>

        $(document).ready(function () {

            $('#unit_price').keyup(function () {
                let t = parseFloat($('#unit_price').val() * $('#quantity').val()) + parseFloat($('#transport_cost').val()) + parseFloat($('#other_cost').val());
                $('#total_price').val(parseFloat(t));
            });

            $('#quantity').keyup(function () {
                let t = parseFloat($('#unit_price').val() * $('#quantity').val()) + parseFloat($('#transport_cost').val()) + parseFloat($('#other_cost').val());
                $('#total_price').val(parseFloat(t));
            });

            $('#transport_cost').keyup(function () {
                let t = parseFloat($('#unit_price').val() * $('#quantity').val()) + parseFloat($('#transport_cost').val()) + parseFloat($('#other_cost').val());
                $('#total_price').val(parseFloat(t));
            });


            $('#other_cost').keyup(function () {
                let t = parseFloat($('#unit_price').val() * $('#quantity').val()) + parseFloat($('#transport_cost').val()) + parseFloat($('#other_cost').val());
                $('#total_price').val(parseFloat(t));
            });

            $('#type').change(function () {
                if ($('#type').val() == 'maize') {
                    $('#quantity-lable-id').html('Quantity in kg');
                } else {
                    $('#quantity-lable-id').html('Quantity');
                }
            });

        });

        function areYouSureToDelete(id) {
            Swal.fire({
                title: 'Are you sure to delete this purchase?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    location.href = '/dashboard/delete-purchase?id=' + id;
                }
            })
        }
    </script>

    <%- include('../includes/dashboard-foot') %>