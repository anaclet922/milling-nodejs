<%- include('../includes/dashboard-top') %>

    <div class="page-content-wrapper">

        <div class="page-content">

            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Dashboard</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0 align-items-center">
                            <li class="breadcrumb-item"><a href="/dashboard"><ion-icon name="home-outline" role="img"
                                        class="md hydrated" aria-label="home outline"></ion-icon></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <%= locals.title %>
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="ms-auto">
                    <!-- <div class="btn-group">
                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal"
                            data-bs-target="#new-daily-workforce-modal">New Record</button>
                    </div> -->
                </div>
            </div>
            <!--end breadcrumb-->

            <br>
            <br>
            <br>

            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-body">


                            <table id="purchases" class="table table-striped table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Customer/Seller</th>
                                        <th>Amount</th>
                                        <th>Note</th>
                                        <th>Type</th>
                                        <th>Date & Time</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <% debts.forEach((debt, index)=> { %>
                                        <tr>
                                            <td>
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <%= debt.customer_id !=null ? (debt.sale.first_name + ' ' +
                                                    debt.sale.last_name) : debt.purchase.seller %>
                                            </td>
                                            <td>
                                                <%= debt.debited_amount.toLocaleString() %>
                                            </td>
                                            <td>
                                                <%= debt.note %>
                                            </td>
                                            <td>
                                                <span
                                                    class="badge bg-<%= debt.customer_id != null ? 'success' : 'danger' %>">
                                                    <%= debt.customer_id !=null ? 'Sale' : 'Purchase' %>
                                                </span>
                                            </td>
                                            <td>
                                                <%= debt.created_at.toLocaleString() %>
                                            </td>
                                            <td>


                                                <div class="btn-group">
                                                    <a href="javascript:;" class="btn btn-outline-primary" onclick="areYouSureToDelete(<%= debt.id %>)">
                                                        Mark as Paid
                                                    </a>
                                                </div>

                                            </td>

                                        </tr>
                                        <% }); %>

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Customer/Seller</th>
                                        <th>Amount</th>
                                        <th>Note</th>
                                        <th>Type</th>
                                        <th>Date & Time</th>
                                        <th>

                                        </th>
                                    </tr>
                                </tfoot>
                            </table>



                        </div>
                    </div>
                </div>
            </div>


        </div>


    </div>




    <script>
        function areYouSureToDelete(id) {

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, it is Paid!'
            }).then((result) => {
                if (result.isConfirmed) {
                    location.href = '/dashboard/debt-paid?id='+ id;
                }
            })
        }
    </script>

    <%- include('../includes/dashboard-foot') %>