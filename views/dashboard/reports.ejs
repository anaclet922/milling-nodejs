    <script>
        $(document).ready(function () {

            var urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('custom')) {
                let tab = urlParams.get('custom');
                if (tab == 'yes') {
                    setTimeout(function () {
                        $(".custom-link")[0].click();
                    }, 500);

                    $('input[name="start"]').val(urlParams.get('start'));
                    $('input[name="end"]').val(urlParams.get('end'));
                }
            }

        });
