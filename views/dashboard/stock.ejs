    <div class="modal fade" id="add-in-stock-modal" tabindex="-1" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form action="/dashboard/add-stock" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title">New <span id="add-title-stock"></span></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <input class="form-control form-control-lg mb-3" type="text" placeholder="Add Value"
                            name="what_to_add">

                    </div>
                    <div class="modal-footer">
                        <input type="hidden" name="stock" id="stock-input-id">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>






    <div class="modal fade" id="remove-in-stock-modal" tabindex="-1" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form action="/dashboard/remove-stock" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title">New <span id="remove-title-stock"></span></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <input class="form-control form-control-lg mb-3" type="text" placeholder="Remove Value"
                            name="what_to_remove">

                    </div>
                    <div class="modal-footer">
                        <input type="hidden" name="stock" id="remove-input-id">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <script>
        function addClicked(new_title, new_sotck_type) {
            $('#add-title-stock').html(new_title);
            $('#stock-input-id').val(new_sotck_type);
        }
        function removeClicked(new_title, new_sotck_type) {
            $('#remove-title-stock').html(new_title);
            $('#remove-input-id').val(new_sotck_type);
        }
    </script>

