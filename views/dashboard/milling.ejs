<%- include('../includes/dashboard-top') %>

    <div class="page-content-wrapper">

        <div class="page-content">

            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Dashboard</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0 align-items-center">
                            <li class="breadcrumb-item"><a href="/dashboard"><ion-icon name="home-outline" role="img"
                                        class="md hydrated" aria-label="home outline"></ion-icon></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <%= locals.title %>
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="ms-auto">
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal"
                            data-bs-target="#new-milling-modal">Record milling session</button>
                    </div>
                </div>
            </div>
            <!--end breadcrumb-->

            <br>
            <br>
            <br>

            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-body">




                            <table id="purchases" class="table table-striped table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Milled at</th>
                                        <th>Input/kg</th>
                                        <th>Output Flour Quantity/kg</th>
                                        <th>Output Branda Quantity/kg</th>
                                        <th>Technician</th>
                                        <th>

                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <% millings.forEach((milling, index)=> { %>
                                        <tr>
                                            <td>
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <%= getFormatedDate(milling.milled_at) %>
                                            </td>
                                            <td>
                                                <%= milling.input_kg.toLocaleString() %>
                                            </td>
                                            <td>
                                                <%= milling.output_kg_flour.toLocaleString() %>
                                            </td>
                                            <td>
                                                <%= milling.output_kg_branda.toLocaleString() %>
                                            </td>
                                            <td>
                                                <%= milling.first_name ? (milling.first_name + ' ' + milling.last_name) : 'Not Specified' %>
                                            </td>
                                            <td>


                                                <div class="btn-group">
                                                    <a href="javascript:;" class="btn btn-outline-primary"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#edit-milling-<%= milling.milling_id %>">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </a>
                                                    <button type="button"
                                                        class="btn btn-outline-primary split-bg-primary dropdown-toggle dropdown-toggle-split"
                                                        data-bs-toggle="dropdown"> <span class="visually-hidden">Toggle
                                                            Dropdown</span>
                                                    </button>
                                                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end">
                                                        <a class="dropdown-item" href="javascript:;"
                                                            onclick="areYouSureToDelete(<%= milling.milling_id %>)">Delete</a>
                                                    </div>
                                                </div>


                                                <div class="modal fade" id="edit-milling-<%= milling.milling_id %>" tabindex="-1" aria-hidden="true" style="display: none;">
                                                    <div class="modal-dialog modal-dialog-centered modal-lg">
                                                        <div class="modal-content">
                                            
                                                            <form action="/dashboard/milling/edit" method="post">
                                            
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Edit Milling</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                </div>
                                            
                                                                <div class="modal-body row">
                                            
                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">Date</label>
                                                                        <input type="date" name="milled_at" class="form-control-lg form-control mb-3"
                                                                            placeholder="Milled at">
                                                                    </div>
                                            
                                                                             
                                                                    <% if(users.length == 0){ %>
                                                                        <input type="hidden" name="technician_id" value="<%= locals.session.loggedInUser.id %>">
                                                                    <% } %>
                                            
                                                                    <% if(locals.session.loggedInUser.role =='admin' || locals.session.loggedInUser.role=='manager'){ %>
                                                                        <div class="form-group col-md-6 col-lg-6">
                                                                            <label for="">Technician</label>
                                                                            <select name="technician_id" id="" class="form-control-lg form-control mb-3" required>
                                                                                <option value="">Select Technician</option>
                                                                                <% users.forEach((user, index)=> { %>
                                                                                    <option value="<%= user.id %>">
                                                                                        <%= user.first_name + ' ' + user.last_name %>
                                                                                    </option>
                                                                                    <% }); %>
                                                                            </select>
                                                                        </div>
                                                                        <% }else{ %>
                                                                            <input type="hidden" name="technician_id" value="<%= locals.session.loggedInUser.id %>">
                                                                            <% } %>
                                            
                                                                   
                                                                                <div class="form-group col-md-6 col-lg-6">
                                                                                    <label for="">Input Kg</label>
                                                                                    <input type="number" name="input_kg" class="form-control-lg form-control mb-3"
                                                                                        placeholder="Input Quantity" required>
                                                                                </div>
                                            
                                                                                <div class="form-group col-md-6 col-lg-6">
                                                                                    <label for="">Flour Output Kg</label>
                                                                                    <input type="number" name="output_kg_flour" class="form-control-lg form-control mb-3"
                                                                                        placeholder="Output Quantity" required>
                                                                                </div>
                                            
                                            
                                                                                <div class="form-group col-md-6 col-lg-6">
                                                                                    <label for="">Branda Output Kg</label>
                                                                                    <input type="number" name="output_kg_branda" class="form-control-lg form-control mb-3"
                                                                                        placeholder="Output Quantity" required>
                                                                                </div>
                                            
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                                    <button type="submit" class="btn btn-primary">Submit</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            

                                                

                                            </td>
                                        </tr>
                                        <% }); %>

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Milled at</th>
                                        <th>Input/kg</th>
                                        <th>Output Flour Quantity/kg</th>
                                        <th>Output Branda Quantity/kg</th>
                                        <th>Technician</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>




                        </div>
                    </div>
                </div>
            </div>


        </div>


    </div>





    <!-- Modal -->
    <div class="modal fade" id="new-milling-modal" tabindex="-1" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">

                <form action="/dashboard/milling/new" method="post">

                    <div class="modal-header">
                        <h5 class="modal-title">New Milling</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body row">

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Date</label>
                            <input type="date" name="milled_at" class="form-control-lg form-control mb-3"
                                placeholder="Milled at">
                        </div>

                                 
                        <% if(users.length == 0){ %>
                            <input type="hidden" name="technician_id" value="<%= locals.session.loggedInUser.id %>">
                        <% } %>

                        <% if(locals.session.loggedInUser.role =='admin' || locals.session.loggedInUser.role=='manager'){ %>
                            <div class="form-group col-md-6 col-lg-6">
                                <label for="">Technician</label>
                                <select name="technician_id" id="" class="form-control-lg form-control mb-3" required>
                                    <option value="">Select Technician</option>
                                    <% users.forEach((user, index)=> { %>
                                        <option value="<%= user.id %>">
                                            <%= user.first_name + ' ' + user.last_name %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <% }else{ %>
                                <input type="hidden" name="technician_id" value="<%= locals.session.loggedInUser.id %>">
                                <% } %>

                       
                                    <div class="form-group col-md-6 col-lg-6">
                                        <label for="">Input Kg</label>
                                        <input type="number" name="input_kg" class="form-control-lg form-control mb-3"
                                            placeholder="Input Quantity" required>
                                    </div>

                                    <div class="form-group col-md-6 col-lg-6">
                                        <label for="">Flour Output Kg</label>
                                        <input type="number" name="output_kg_flour" class="form-control-lg form-control mb-3"
                                            placeholder="Output Quantity" required>
                                    </div>


                                    <div class="form-group col-md-6 col-lg-6">
                                        <label for="">Branda Output Kg</label>
                                        <input type="number" name="output_kg_branda" class="form-control-lg form-control mb-3"
                                            placeholder="Output Quantity" required>
                                    </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>




    <script>
        function areYouSureToDelete(id) {
          Swal.fire({
              title: 'Are you sure to delete?',
              text: "You won't be able to revert this!",
              icon: 'warning',
              showCancelButton: true,
              confirmButtonColor: '#3085d6',
              cancelButtonColor: '#d33',
              confirmButtonText: 'Yes, delete it!'
          }).then((result) => {
              if (result.isConfirmed) {
                  location.href = '/dashboard/delete-milling?id=' + id;
              }
          })
      }
  </script>




    <%- include('../includes/dashboard-foot') %>