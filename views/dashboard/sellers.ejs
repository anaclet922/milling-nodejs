<%- include('../includes/dashboard-top') %>

    <div class="page-content-wrapper">

        <div class="page-content">

            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                      <!-- <div class="breadcrumb-title pe-3">Dashboard</div> -->
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0 align-items-center">
                            <li class="breadcrumb-item"><a href="/dashboard"><ion-icon name="home-outline" role="img"
                                        class="md hydrated" aria-label="home outline"></ion-icon></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <%= locals.title %>
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="ms-auto">
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal"
                            data-bs-target="#new-seller-modal">New seller</button>
                    </div>
                </div>
            </div>
            <!--end breadcrumb-->

            <br>
            <br>
            <br>

            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            
                            <table id="systemUsers" class="table table-striped table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>NID</th>
                                        <th>Phone</th>
                                        <th>Location</th>
                                        <th>About</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>NID</th>
                                        <th>Phone</th>
                                        <th>Location</th>
                                        <th>About</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                                <tbody>

                                    <% sellers.forEach((seller, index)=> { %>
                                        <tr>
                                            <td>
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <%= seller.first_name + ' ' + seller.last_name %>
                                            </td>
                                            <td>
                                                <%= seller.id_no %>
                                            </td>
                                            <td>
                                                <%= seller.phone %>
                                            </td>
                                            <td>
                                                <%= seller.location %>
                                            </td>
                                            <td>
                                                <%= seller.about %>
                                            </td>
                                            <td>
                                                

                                                
                                                <div class="btn-group">
                                                    <a href="javascript:;"
                                                        class="btn btn-outline-primary"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#edit-seller-<%= seller.id %>">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </a>
                                                    <button type="button"
                                                        class="btn btn-outline-primary split-bg-primary dropdown-toggle dropdown-toggle-split"
                                                        data-bs-toggle="dropdown"> <span
                                                            class="visually-hidden">Toggle
                                                            Dropdown</span>
                                                    </button>
                                                    <div
                                                        class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end">
                                                        <a class="dropdown-item" href="javascript:;"
                                                            onclick="areYouSureToDelete(<%= seller.id %>)">Delete</a>
                                                    </div>
                                                </div>


                                                <div class="modal fade" id="edit-seller-<%= seller.id %>" tabindex="-1" aria-hidden="true" style="display: none;">
                                                    <div class="modal-dialog modal-dialog-centered modal-lg">
                                                        <div class="modal-content">
                                            
                                                            <form action="/dashboard/seller/edit" method="post">
                                            
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Edit seller</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                </div>
                                            
                                                                <div class="modal-body row">
                                            
                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">First Name</label>
                                                                        <input class="form-control form-control-lg mb-3" type="text" placeholder="First name"
                                                                            name="first_name" required value="<%= seller.first_name %>">
                                                                    </div>
                                            
                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">Last Name</label>
                                                                        <input class="form-control form-control-lg mb-3" type="text" placeholder="Last name"
                                                                            name="last_name" required value="<%= seller.last_name %>">
                                                                    </div>
                                            
                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">NID/TIN</label>
                                                                        <input class="form-control form-control-lg mb-3" type="text" placeholder="National ID"
                                                                            name="id_no" required value="<%= seller.id_no %>">
                                                                    </div>
                                            
                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">Phone</label>
                                                                        <input class="form-control form-control-lg mb-3" type="text" placeholder="Phone number"
                                                                            name="phone" required value="<%= seller.phone %>">
                                                                    </div>
                                            
                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">Location</label>
                                                                        <input class="form-control form-control-lg mb-3" type="text" placeholder="Location"
                                                                            name="location" required value="<%= seller.location %>">
                                                                    </div>
                                            
                                                                    <div class="form-group col-md-6 col-lg-6">
                                                                        <label for="">About</label>
                                                                        <textarea name="about" class="form-control"><%= seller.about %></textarea>
                                                                    </div>
                                            
                                            
                                            
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <input type="hidden" name="id" value="<%= seller.id %>">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                                    <button type="submit" class="btn btn-primary">Submit</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            
                                            

                                            </td>
                                        </tr>
                                        <% }); %>

                                </tbody>
                            </table>


                        </div>
                    </div>
                </div>
            </div>


        </div>


    </div>




    
    <!-- Modal -->
    <div class="modal fade" id="new-seller-modal" tabindex="-1" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">

                <form action="/dashboard/seller/new" method="post">

                    <div class="modal-header">
                        <h5 class="modal-title">New seller</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body row">

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">First Name</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="First name"
                                name="first_name" required>
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Last Name</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="Last name"
                                name="last_name" required>
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">NID/TIN</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="National ID"
                                name="id_no" required>
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Phone</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="Phone number"
                                name="phone" required>
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">Location</label>
                            <input class="form-control form-control-lg mb-3" type="text" placeholder="Location"
                                name="location" required>
                        </div>

                        <div class="form-group col-md-6 col-lg-6">
                            <label for="">About</label>
                            <textarea name="about" class="form-control"></textarea>
                        </div>



                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>




    
    <script>
        function areYouSureToDelete(id) {
            Swal.fire({
                title: 'Are you sure to delete this seller?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    location.href = '/dashboard/seller/delete?id=' + id;
                }
            })
        }
    </script>

    <%- include('../includes/dashboard-foot') %>